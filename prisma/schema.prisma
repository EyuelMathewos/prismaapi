// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") + "/newdb?schema=public"
}

model User {
  id           Int         @id @default(autoincrement())
  email        String         @unique
  name         String?
  password     String
  role         Int
  tokens accesstokens[]
  orders Order[]
}

model accesstokens {
  id          Int @id @default(autoincrement())
  clientId    Int 
  iat         Int
  exp         Int
  tokens User   @relation(fields: [clientId], references: [id])
}

model Item {
  id               Int         @id @default(autoincrement())
  itemname         String
  itemprice        Int
  order Order[]
}

model Order {
    id           Int         @id @default(autoincrement())
    itemId       Int         @unique
    itemAmount   Int
    customerId   Int 
    orders User   @relation(fields: [customerId], references: [id])
    item Item   @relation(fields: [itemId], references: [id])
}
